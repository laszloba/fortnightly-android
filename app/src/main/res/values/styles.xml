<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Toolbar" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/merriweather_black</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="Toolbar.Title">
        <item name="android:textSize" tools:ignore="SpUsage">20dp</item>
    </style>

    <style name="Toolbar.SingleLetterLogo">
        <item name="android:textSize" tools:ignore="SpUsage">24dp</item>
    </style>

    <style name="Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/libre_franklin_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/merriweather_black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/libre_franklin_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>

    <style name="Body3" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/libre_franklin_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/silver_chalice</item>
    </style>

    <style name="ErrorMessage" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/libre_franklin_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/thunderbird</item>
    </style>
</resources>
